<main >
    
    <%- include("partials/header.ejs") %>
    
    <div class="form">
    <form action="/edit/<%= post.id %>" method="POST">
        <h1 class="h1">Edit Post</h1>
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= post.title %>" required>
        </div>
        <div>
            <label for="content">Content</label><br>
            <textarea id="content" name="content" rows="4" cols="50" required> <%= post.content %> </textarea>
        </div>
        <div>
            <label for="author">Author</label>
            <input type="text" id="author" name="author" required value="<%= post.author %>">
        </div>
        <div>
            <label for="image">Image URL</label>
            <input type="url" id="image" name="image" value="<%= post.image %>">
        </div>
        <div>
            <label for="date">Date</label>
            <input type="date" id="date" name="date" value="<%= post.date %>">
        </div>
        
        <button type="submit">edit Post</button>
    </form>
</div>

<%- include('partials/footer.ejs') %>

</main>